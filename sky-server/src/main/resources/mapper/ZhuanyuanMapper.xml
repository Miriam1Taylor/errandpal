<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sky.mapper.ZhuanyuanMapper">

    <resultMap id="ZhuanyuanResultMap" type="com.sky.dto.ZhuanyuanDTO">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="idNumber" column="id_number"/>
        <result property="sex" column="sex"/>
        <result property="active" column="active"/>
        <result property="judge" column="judge"/>
    </resultMap>

    <select id="list" resultMap="ZhuanyuanResultMap">
        SELECT
        z.id,u.name, u.phone, u.id_number, u.sex,
        z.active, z.judge
        FROM zhuanyuan z
        LEFT JOIN `user` u ON z.userid = u.id
        <where>
            <if test="name != null and name != ''">
                AND u.name LIKE CONCAT('%', #{name}, '%')
            </if>
            AND u.zystatus = 1
        </where>
        LIMIT #{offset}, #{limit}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*)
        FROM zhuanyuan z
        LEFT JOIN `user` u ON z.userid = u.id
        <where>
            <if test="name != null and name != ''">
                AND u.name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="phone != null and phone != ''">
                AND u.phone LIKE CONCAT('%', #{phone}, '%')
            </if>
        AND u.zystatus = 1
        </where>
    </select>

    <!-- 更新奖励 -->
    <update id="updateReward">
        UPDATE zhuanyuan
        SET judge = #{evaluation}, active = #{activity}
        WHERE id = #{id}

    </update>

    <!-- 获取活跃度 -->
    <select id="getActive" resultType="int">
        SELECT
            z.active
        FROM zhuanyuan z
        WHERE id = #{id}

    </select>

    <!-- 获取评价度 -->
    <select id="getJudge" resultType="int">
        SELECT z.judge FROM zhuanyuan z WHERE id = #{id}
    </select>



    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM zhuanyuan WHERE id = #{id}
    </delete>

    <!-- 通过 zhuanyuan 表的 id 更新 user 表中的 zystatus 为 2 -->
    <update id="updateZystatusTo2">
        UPDATE user
        SET zystatus = 2
        WHERE id = (
            SELECT userid
            FROM zhuanyuan
            WHERE id = #{id}
        )
    </update>



    <!--    这边看错文件了，应该在setmeal文件里面，现在这个是专员的文件-->
    <!-- 将 status 设置为 1 -->
    <update id="updateStatusTo1">
        UPDATE setmeal
        SET status = 1
        WHERE id = #{id}
    </update>

    <!-- 将 status 设置为 2 -->
    <update id="updateStatusTo2">
        UPDATE setmeal
        SET status = 2
        WHERE id = #{id}
    </update>

    <!-- 将 status 设置为 0 -->
    <update id="updateStatusTo0">
        UPDATE setmeal
        SET status = 0
        WHERE id = #{id}
    </update>

</mapper>
