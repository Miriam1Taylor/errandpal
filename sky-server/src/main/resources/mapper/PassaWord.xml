<mapper namespace="com.sky.mapper.PasswordMapper">

    <!-- 根据ID查询员工信息 -->
    <select id="getById" parameterType="long" resultType="com.sky.entity.Employee">
        SELECT *
        FROM employee
        WHERE id = #{empId}
    </select>

    <!-- 根据ID更新密码 -->
    <update id="updatePassword">
        UPDATE employee
        SET password = #{newPassword}
        WHERE id = #{empId}
    </update>

