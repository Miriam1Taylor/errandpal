<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.AdminDiscountMapper">

    <!-- 插入批量折扣数据 -->
    <insert id="insertBatch">
        insert into discount (name, count) VALUES
        <foreach collection="discounts" separator="," item="item">
            (#{item.name}, #{item.count})
        </foreach>
    </insert>

    <!-- 根据id删除折扣数据 -->
    <delete id="deleteById">
        delete
        from discount
        where id = #{id};
    </delete>

    <!-- 根据id查询折扣数据 -->
    <select id="getById" resultType="com.sky.entity.Discount">
        select id, name, count
        from discount
        where id = #{id};
    </select>

    <!-- 查询所有折扣数据 -->
    <select id="getAll" resultType="com.sky.entity.Discount">
        select id, name, count
        from discount;
    </select>

</mapper>
